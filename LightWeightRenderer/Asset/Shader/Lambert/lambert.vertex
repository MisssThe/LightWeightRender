#version 330 core

//------------ LAYOUT ------------
layout (location = 0) in vec3 aPos;
//------------ LAYOUT ------------


//------------ UNIFORM ------------
uniform float c;
//------------ UNIFORM ------------


//------------- INOUT -------------
//------------- INOUT -------------


//-------------- MAIN --------------
void main()
{
    gl_Position = vec4(aPos.x + c,aPos.y + c * 3,aPos.z,1.0);
}
//-------------- MAIN --------------